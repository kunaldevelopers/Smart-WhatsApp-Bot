# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent

# Data File Configuration
# Path to your company data file
COMPANY_DATA_FILE=techcorp_data.txt

# Logging Configuration
# Application log file name
APP_LOG_FILE=app.log
# Queries log file name for tracking user interactions
QUERIES_LOG_FILE=queries.log
# Maximum log file size in bytes (default: 10MB)
LOG_MAX_SIZE=10485760

# Bot Configuration Limits
# Maximum number of messages to keep in user history
MAX_HISTORY_SIZE=10
# Maximum number of users to track simultaneously
MAX_USERS=1000
# Maximum number of processed messages to remember (for duplicate detection)
MAX_PROCESSED_MESSAGES=1000
# Minimum interval between messages from same user (milliseconds)
MIN_MESSAGE_INTERVAL=1000

# AI Configuration
# AI response creativity (0.0 to 1.0)
AI_TEMPERATURE=0.7
# Maximum tokens in AI response
AI_MAX_OUTPUT_TOKENS=2000

# Rate Limiting & Retry Configuration
# Number of retry attempts for API calls
FETCH_RETRIES=2
# Delay between retry attempts (milliseconds)
FETCH_RETRY_DELAY=500
